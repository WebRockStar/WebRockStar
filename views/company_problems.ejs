<% layout('company_layout') -%>

<link href="/css/app.css" rel="stylesheet">
  
	<div class="row panel">
    <div class="panel-body">
    <div class="row">
      <div class="form-group col-md-6">
        <label for="wrs-file-problem">Problem</label>
        <input id="wrs-file-problem" type="text" class="form-control" placeholder="Problem Title"></input>
      </div>
      <div class="form-group col-md-6">
        <label for="wrs-file-problem-statement">Problem description</label>
        <textarea id="srs-file-problem-statement" class="form-control" rows="3" placeholder="Problem description"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <label for="wrs-file-problem-constraints">Problem constraints</label>
        <textarea id="srs-file-problem-constraints" class="form-control" rows="3" placeholder="Problem constraints"></textarea>
      </div>
      <div class="form-group col-md-6">
        <label for="wrs-file-problem-example">Problem example</label>
        <textarea id="srs-file-problem-example" class="form-control" rows="3" placeholder="Problem examples"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-10">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="cancel" class="btn btn-default btn-danger">Cancel</button>
      </div>
    </div>
      <hr>
      <ul class="nav nav-tabs">
        <li><a href="#wrs-tab-question" data-toggle="tab">Question</a></li>
        <li><a href="#wrs-tab-testcase" data-toggle="tab">Test Case</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="wrs-tab-question">
          <div class="col-md-3">
            <div class="row">
              <div class="tree">
                <ul>
                  <li><a href="#" class="active"><span class="glyphicon glyphicon-folder-open">/</span></a><a clas="btn btn-xs btn-danger"><span class="glyphicon glyphicon-plus"></span></a></li>
                  <ul>
                    <li>
                      <a href="#"><span class="glyphicon glyphicon-file">index.js</span></a>
                    </li>
                    <li>
                      <a href="#"><span class="glyphicon glyphicon-folder-open">views</span><a clas="btn btn-xs btn-danger"><span class="glyphicon glyphicon-plus"></span></a></a>
                      <ul>
                        <a href="#"><li><span class="glyphicon glyphicon-file">index.ejs</span></a></li>
                        <a href="#"><li><span class="glyphicon glyphicon-file">app.ejs</span></a></li>
                        <a href="#"><li><span class="glyphicon glyphicon-file">web.ejs</span></a></li>
                      </ul>
                    </li>
                  </ul>
                </ul>
              </div> <!-- tree -->
            </div> <!-- row -->
          </div><!-- col-md-3 -->
          <div class="col-md-9">
            <div class="wrs-left-border">
              <div class="panel panel-default filestruct-panel">
                <div class="panel-heading">
                  <h4>/</h4>
                  <span class="wrs-pull-right">
                    <button class="btn btn-danger">Delete</button>
                  </span>
                </div>
                <div class="panel-body">
                  <form role="form">
                    <div class="form-group">
                       <label for="wrs-file-name">Name</label>
                       <input type="text" class="form-control" id="wrs-file-name">
                    </div>
                    <div class="form-group">
                      <label class="radio-inline">
                        <input type="radio" name="wrs-file-type" id="wrs-file-type1" value="file" checked>
                        file
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="wrs-file-type" id="wrs-file-type2" value="folder">
                        folder
                      </label>
                    </div>
                    <div class="form-group">
                      <label for="wrs-file-name">Type</label>
                      <select class="form-control" id="wrs-file-mime">
                        <option>html</option>
                        <option>xml</option>
                        <option>js</option>
                        <option>json</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="wrs-file-name">Content</label>
                      <textarea id="wrs-file-content" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="checkbox">
                       <label><input id="wrs-file-editable" type="checkbox" checked> Editable</label>
                    </div>
                    <button type="submit" class="btn btn-default filestruct-save">Save</button>
                    <button type="cancel" class="btn btn-default">Cancel</button>
                  </form>
                </div> <!-- panel-body -->
              </div> <!-- panel -->
            </div> <!-- wrs-left-border -->
          </div><!-- col-md-9 -->
        </div> <!-- wrs-tab-question -->
        <div class="tab-pane" id="wrs-tab-testcase">
          <div class="col-md-3">
            <div class="row">
              <div class="tree">
                <button id='new-test-case' class="btn btn-primary btn-block">New</button>
                <ul>
                  <li><a href="#"><span class="glyphicon glyphicon-folder-open">/</span></a></li>
                  <ul id='test-case-list'>
                  </ul>
                </ul>
                <ul><strong>Total Points</strong>:100</ul>
              </div> <!-- tree -->
            </div> <!-- row -->
          </div><!-- col-md-3 -->
          <div class="col-md-9">
            <div class="wrs-left-border">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4>TestCase01</h4>
                  <span class="wrs-pull-right">
                    <button class="btn btn-danger">Delete</button>
                  </span>
                </div>
                <div class="panel-body">
                  <form role="form">
                    <div class="form-group" id="wrs-inp-val">
                      <label for="wrs-file-name">Input</label>
                      <div id="initInput" class="row">
                        <div class="form-group col-xs-6">
                          <input type="text" class="form-control wrs-key" placeholder="Key">
                        </div>
                        <div class="form-group col-xs-5">
                          <input type="text" class="form-control wrs-val" placeholder="Value">
                        </div>
                      </div> <!-- row -->
                    </div>
                    <div class="form-group" id="wrs-out-val">   
                      <label for="wrs-file-name">Output</label>                 
                      <div id="initOutput" class="row">
                        <div class="form-group col-xs-6">
                          <input type="text" class="form-control wrs-key" placeholder="Key">
                        </div>
                        <div class="form-group col-xs-5">
                          <input type="text" class="form-control wrs-val" placeholder="Value">
                        </div>
                      </div> <!-- row -->
                    </div>
                    <div class="form-group">
                       <label for="wrs-test-point">Target URL</label>
                       <div class="input-group">
                        <span class="input-group-addon">http://</span>
                        <input type="text" class="form-control" id="target-url" placeholder="target url">
                      </div>
                    </div>
		     <button type="button" class="btn btn-default test-case-save">Save</button>
		      <button type="cancel" class="btn btn-default">Cancel</button>
                  </form>
                </div> <!-- panel-body -->
              </div> <!-- panel -->
            </div> <!-- wrs-left-border -->
          </div><!-- col-md-9 -->
        </div> <!-- wrs-tab-testcase -->
      </div>
    </div> <!-- panel-body -->
  </div> <!-- row -->
</div>

<script src='/js/manage_problems.js' > </script>
</body>
